  },
  "devDependencies": {
    "@cloudflare/vitest-pool-workers": "^0.8.24",
    "@cloudflare/workers-types": "^4.20250503.0",
    "@sinonjs/fake-timers": "^14.0.0",
    "@types/node": "20.8.3",
    "@types/service-worker-mock": "^2.0.1",
    "typescript": "^5.8.3",
    "vitest": "~3.0.0",
    "wrangler": "^4.14.1"
  }
